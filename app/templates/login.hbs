<div {{bind-attr class=':login isVisible::hidden'}}>
  {{input type='email' class='input email' value=email placeholder='email'}}
  {{input type='password' class='input password' value=password placeholder='password'}}
  <input class='btn btn-success' value='Sign In' {{action 'logIn'}}>
  <a class='link' {{action 'toggle'}}>Forgot password?</a>
</div>

<div {{bind-attr class=':reset isVisible:hidden'}}>
  {{input type='email' class='input email2' value=email placeholder='email'}}
  <a class='link' {{action 'sendPasswordResetEmail'}}>Request Password Reset</a>
  <a class='link link2' {{action 'toggle'}}>Cancel</a>
</div>
