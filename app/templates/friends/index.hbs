<form class='friends'>
  <button {{action 'findFriends'}}><i></i>Find Friends</button>

  <h2>My Friends</h2>

  {{#each model itemController='FriendsItem'}}
      <ul>
        <li>
          <p>{{username}}</p>
          <img class='imgAvatar' {{bind-attr src=imgURL}} />
          {{link-to 'View Swag' 'friends.show' this class='btn'}}
          <button class='btn btn-warning'{{action 'removeFriend'}}>Remove Friend</button>
        </li>
      </ul>
  {{/each}}
</form>
